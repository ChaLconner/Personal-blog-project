{
  "name": "my-side-project",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack blog application with React frontend and Node.js backend",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build || echo \"No build needed for server\"",
    "build": "npm run build:client && npm run build:server",
    
    "prod:client": "cd client && npm run preview",
    "prod:server": "cd server && NODE_ENV=production npm start",
    "prod": "npm run build && concurrently \"npm run prod:server\" \"npm run prod:client\"",
    
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "install:all": "npm run install:client && npm run install:server",
    
    "clean": "cd client && rm -rf dist node_modules && cd ../server && rm -rf node_modules",
    "clean:logs": "find . -name '*.log' -delete",
    
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "test": "concurrently \"npm run test:client\" \"npm run test:server\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChaLconner/Personal-blog-project.git"
  },
  "keywords": [
    "blog",
    "react",
    "nodejs",
    "express",
    "supabase",
    "fullstack"
  ],
  "author": "ChaLconner",
  "license": "MIT"
}
